{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@middlewares/*": ["middlewares/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@models/*": ["models/*"],
      "@validators/*": ["validators/*"],
      "@database/*": ["database/*"],
      "@repositories/*": ["repositories/*"],
      "@enums/*": ["enums/*"],
      "@mappers/*": ["mappers/*"]
    },
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,

    "types": ["node", "express", "multer"]
  }
}
