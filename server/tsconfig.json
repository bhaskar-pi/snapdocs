{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@middlewares/*": ["middlewares/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@models/*": ["models/*"],
      "@validators/*": ["validators/*"],
      "@database/*": ["database/*"],
      "@repositories/*": ["repositories/*"],
      "@enums/*": ["enums/*"],
      "@mappers/*": ["mappers/*"]
    },

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "skipLibCheck": true
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
